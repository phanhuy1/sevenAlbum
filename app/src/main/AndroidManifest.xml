<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sevenalbum">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- permission for internet -->
    <uses-permission android:name="android.permission.INTERNET"
        android:required="true"/>
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:name="com.example.sevenalbum.activities.mainActivities.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:configChanges="locale"

        android:theme="@style/Theme.sevenalbum">
        <meta-data
            android:name="com.google.mlkit.vision.DEPENDENCIES"
            android:value="ica" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.firebase.ml.vision.DEPENDENCIES"
            android:value="label" />

        <activity
            android:name="com.example.sevenalbum.activities.subActivities.GifShowActivity"
            android:exported="true" />
        <activity
            android:name="com.example.sevenalbum.activities.subActivities.MultiSelectImage"
            android:exported="true" />
        <activity
            android:name="com.example.sevenalbum.activities.subActivities.ItemSecretMultiSelectActivity"
            android:exported="true" />
        <activity
            android:name="com.example.sevenalbum.activities.subActivities.ItemAlbumMultiSelectActivity"
            android:exported="true" />
        <activity
            android:name="com.example.sevenalbum.activities.mainActivities.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.sevenalbum.activities.mainActivities.SettingsActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.sevenalbum.activities.mainActivities.AddImageToAlbumActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.sevenalbum.activities.mainActivities.ItemAlbumActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.sevenalbum.activities.mainActivities.SlideShowActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.sevenalbum.activities.mainActivities.PictureActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.sevenalbum.activities.mainActivities.CreateAlbumActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.sevenalbum.activities.mainActivities.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.dsphotoeditor.sdk.activity.DsPhotoEditorActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Material.NoActionBar.Fullscreen" />
        <activity
            android:name="com.dsphotoeditor.sdk.activity.DsPhotoEditorStickerActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Material.NoActionBar.Fullscreen" />
        <activity
            android:name="com.dsphotoeditor.sdk.activity.DsPhotoEditorTextActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Material.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.dsphotoeditor.sdk.activity.DsPhotoEditorCropActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Material.NoActionBar.Fullscreen" />
        <activity
            android:name="com.dsphotoeditor.sdk.activity.DsPhotoEditorDrawActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Material.NoActionBar.Fullscreen" />
    </application>

</manifest>